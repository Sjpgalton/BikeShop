@model Redweb.BikeShop.Core.ViewModels.AllProductsViewModel
@{
    ViewBag.Title = "All Products";
    AjaxOptions options = new AjaxOptions
    {
        UpdateTargetId = "searchResult",
        InsertionMode = InsertionMode.Replace,
    };
}
<ul class="breadcrumb voffset5">
    <li>
        <a href="@Url.Action("Index", "Home")">
            Home
        </a>
    </li>
    <li class="active">All Products</li>
</ul>
<body>
<h3>All Products</h3>
@using (Ajax.BeginForm("AllProductsSearch", options))
{
    <div>
        @Html.TextBox("query", "", new { @class = "searchbar", placeholder = "Search for products" })
        <button type="submit" class="btn btn-primary btn-sm hoffset1">Search</button>
    </div>
}
<table class="table table-striped table-hover voffset3">
    <thead>
    <tr>
        <th>Image</th>
        <th>Product Code</th>
        <th>Product Name</th>
        <th>Category</th>
        <th>Subcategory</th>
        <th>Model</th>
        <th>Price (£)</th>
        @if (Model.ShowActions)
        {
            <th colspan="2">Actions</th>
        }
    </tr>
    </thead>
    <tbody id="searchResult">
        @Html.Action("AllProductsSearch", new { query = "" })
    </tbody>
</table>    
   
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function() {
            $(".js-delete-product").click(function(e) {
                var link = $(e.target);

                bootbox.dialog({
                    message: "Are you sure you would like to delete this product?",
                    title: "Confirm",
                    buttons: {
                        no: {
                            label: "No",
                            classname: "btn-default",
                            callback: function() {
                                bootbox.hideAll();
                            }
                        },
                        yes: {
                            label: "Yes",
                            classname: "btn-danger",
                            callback: function() {
                                $.ajax({
                                        url: "/api/products/" + link.attr("data-product-id"),
                                        method: "DELETE"
                                    })
                                    .done(function() {
                                        link.parents("tr").fadeOut(function() {
                                            $(this).remove();
                                        });
                                    })
                                    .fail(function() {
                                        alert("Error deleting product");
                                    });

                            }
                        }
                    }
                });
            });
        });
    </script>
}
