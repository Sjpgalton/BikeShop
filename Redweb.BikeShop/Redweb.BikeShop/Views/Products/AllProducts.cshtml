@model IEnumerable<Redweb.BikeShop.Core.Models.ProductModel>
@{
    ViewBag.Title = "All Products";
}
<ul class="breadcrumb voffset5">
    <li>
        <a href="@Url.Action("Index", "Home")">
            Home
        </a>
    </li>
    <li class="active">All Products</li>
</ul>
<body>
<h3>All Products</h3>
    <table class="table table-striped table-hover voffset3">
        <tr>
            <th>Product Code</th>
            <th>Product Name</th>
            <th>Category</th>
            <th>Subcategory</th>
            <th>Model</th>
            <th>Price (£)</th>
            <th>Colour</th>
            <th>Size</th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <th>@product.Code</th>
                <th>
                    <a href="@Url.Action("ProductDetails", "Products", new { id = product.Id })">
                        @product.Name
                    </a>
                </th>
                <th>@product.Category.Name</th>
                <th>@product.Subcategory.Name</th>
                <th>@product.Model.Name</th>
                <th>£@product.Price</th>
                <th>
                    @if (product.Colour != null)
                    {
                        @product.Colour.Name
                    }
                </th>
                <th>
                    @if (product.Size != null)
                    {
                        @product.Size.Name
                    }
                </th>
            </tr>
        }
    </table>
</body>
